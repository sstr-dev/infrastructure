#!/bin/bash
echo "üîç Running SOPS encryption check..."
failed=0
for file in $(find . -type f -name "*.sops.yaml" ! -path "./.sops.yaml"); do
  if ! grep -q "sops:" "$file"; then
    echo "‚ùå Not encrypted: $file"
    failed=1
  fi
done

if [ "$failed" -eq 1 ]; then
  echo "‚õî Commit blocked due to unencrypted SOPS files."
  exit 1
fi

echo "‚úÖ All SOPS files are encrypted."
